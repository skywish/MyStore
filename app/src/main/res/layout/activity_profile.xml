    <LinearLayout
        android:id="@+id/setting_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="@dimen/setting_cardwidth"
            android:layout_height="@dimen/setting_cardheight"
            android:layout_marginLeft="@dimen/setting_cardmargin"
            android:layout_marginTop="@dimen/setting_cardmargin"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/login_background"/>
                <TextView
                    android:id="@+id/info_text1"
                    android:text="全部订单"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

